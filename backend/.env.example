# Database (Neon)
# Connection pooling URL (usa esto para Vercel)
DATABASE_URL="postgresql://user:password@ep-xxxxx.region.aws.neon.tech/spa_db?sslmode=require&pgbouncer=true"
# Direct connection URL (usa esto para migraciones)
DIRECT_URL="postgresql://user:password@ep-xxxxx.region.aws.neon.tech/spa_db?sslmode=require"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRATION=30d

# OAuth2 - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/callback

# OAuth2 - Apple
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret
APPLE_CALLBACK_URL=http://localhost:4000/auth/apple/callback

# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@spadelujo.com
SENDGRID_FROM_NAME="Spa de Lujo"

# Twilio (WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_PHONE_NUMBER=+1234567890

# App Configuration
APP_PORT=4000
APP_ENV=development
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:4000

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Cloudinary (opcional)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
